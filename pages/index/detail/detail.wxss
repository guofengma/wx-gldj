/* pages/index/detail/detail.wxss */
.detail{
  width:100%;
  height: 100%;
  background-color: #f0f0f0;
}
.content{
  background-color:#fff;
}
.focus-group{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  /* display: none; */
}
.list-content{
  width:546rpx;
  height: 636rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: absolute;
  top:120rpx;
  left:50%;
  margin-left: -273rpx;
  background-color: #fff;
  border-radius:16rpx;
  z-index: 9999;
}
.list-content .title{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color:#323232;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #efefef;
}
checkbox-group,.plus-group{
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #efefef;
  font-size: 30rpx;
  color:#646464;
}
.list-item{
  height: 420rpx;
  overflow-y: scroll;
}
.checkbox checkbox{
  height: 20rpx;
  position: absolute;
  right: 0;
}
.sure{
  display: flex;
  padding-top: 30rpx;
}
.sure text{
  width:50%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size:30rpx;
  color: #646464;
}
.sure text:nth-child(1){
  box-sizing: border-box;
  border-right: 1px solid #efefef;
}
.sure text:nth-child(2){
  color:#fac264;
}
.warrap{
  width:100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.avatar{
  width:100%;
  height:130rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.avatar image{
  width:86rpx;
  height: 86rpx;
  margin-right:30rpx;
}
.orgname{
  font-size:34rpx;
  font-weight: bold;
}
.type{
  font-size:30rpx;
  color:#a2a2a2;
}
.type text:nth-child(2){
  padding-left: 20rpx;
}
.focus{
  width:125rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  right:22rpx;
  top:50%;
  margin-top:-22.5rpx;
  border: 1px solid #ffb849;
  font-size:30rpx;
  text-align: center;
  border-radius: 10px;
  color:#ffb849;
}
.text{
  font-size:30rpx;
  line-height: 44rpx;
  color:#323232;
  text-align:justify;
}
.pictures{
  margin:30rpx 0 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.pictures view{
  width:33.33%;
  height: 240rpx;
  text-align: center;
}
.pictures image{
  width:230rpx;
  height: 230rpx;
}
.user-do{
  width:100%;
  height: 94rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  background-color: #f9f9f9;
  border-top:1px solid #e8e8e8;
  border-bottom:1px solid #e8e8e8;
  align-items: center;
  color:#8d8d8d;
}
.user-do view{
  width:33.33%;
  height: 45rpx;
  text-align: center;
  font-size:30rpx;
  border-right: 1px solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-do view:nth-child(3){
  border:none;
}
.user-do image{
  width:50rpx;
  height: 50rpx;
  margin-right:10rpx;
}
.user-content{
  width: 100%;
  padding:0 2%;
  box-sizing: border-box;
  background-color: #fff;
}
/* 签到 */
.sign>view{
  width:100%;
  box-sizing: border-box;
  padding: 0 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  border-bottom: 1px solid #f0f0f0;
  font-size:30rpx;
}
.sign scroll-view{
  width:100%;
  height: 130rpx;
  padding-top:20rpx;
  white-space: nowrap;
  background-color: #fff;
  border-bottom:10rpx solid #f0f0f0;
}
.scroll-item{
  width:12.5%;
  height: 100%;
  display: inline-block;
  text-align: center;
  font-size:28rpx;
  color:#646464;
}
.scroll-item image,.avatar-img{
  width:72rpx;
  height: 72rpx;
  border-radius: 50%;
}
/* 评论分享点赞 */
.comment-content,.share-content{
  display: flex;
  padding-top: 25rpx;
}
.share-comment-title{
  width:100%;
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  font-size:32rpx;
   border-bottom:1px solid #f0f0f0; 
}
.share-comment-title view text{
  padding: 0 10rpx;
}
.share-comment-title view{
  padding: 0 10rpx;
  color:#646464;
}
.share-comment-title view:nth-child(1){
  padding: 0 10rpx;
}
.share-comment-title view:nth-child(2){
  padding: 0 10rpx;
  margin-left:95rpx;
}
.share-comment-title view:nth-child(3){
  padding: 0 10rpx;
  position: absolute;
  right: 80rpx;
}
.active{
  border-bottom:1px solid #ffb849;
}
.share-name{
  font-size:32rpx;
  color:#323232;
}
.share-time{
  font-size: 30rpx;
  color: #646464;
}
.comment-content>view,.share-content>view{
  width:624rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  border-bottom:1px solid #f0f0f0;
}
.user-name{
  font-size:32rpx;
  font-weight: bold;
  padding-top: 4rpx;
  padding-bottom: 20rpx;
}
.user-comment,.comment-time{
  font-size: 30rpx;
  color:#646464;
}
.comment-time{
  font-size: 30rpx;
  padding-top: 20rpx;
  color: #646464;
}
.like-content{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
}
.like-name{
  padding-left: 20rpx;
}