/* pages/mine/myIntegral/myIntegral.wxss */
.integral{
  width:100%;
}
.lists{
  width:100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.active-line{
  margin-left:24rpx;
  width:2px;
  min-height:30rpx;
  background-color:#f0f0f0;
}
.active-circle{
  width:20rpx;
  height:20rpx;
  border-radius:50%;
  background-color:#cdcdcd;
  margin-left:18rpx;
}
.line{
  margin-left:24rpx;
  width:2px;
  min-height:54rpx;
  background-color:#f0f0f0;
}
.title{
  width:100%;
  height: 171rpx;
  background: url('http://www.wsspha.cn/images/div_bg2.jpg') no-repeat center center;
  background-size:100%;
  text-align: center;
  font-size:48rpx;
  font-weight: bold;
}
.title text{
  display: block;
  padding-top:30rpx;
}
.day-item{
  display: flex;
  color:#646464;
  font-size:32rpx;
}
.day-item image{
  width:50rpx;
  height: 50rpx;
}
.day-item .content{
  width:500rpx;
  padding-left: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.day-item .time{
  padding-left: 30rpx;
}
.loading-more{
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  position: fixed;
  bottom:0;
  left: 0;
  z-index:666;
  background-color:#fff;
  text-align: center;
  font-size:32rpx;
  color:#828282;
}