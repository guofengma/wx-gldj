/* pages/active/activityPreview/activityPreview.wxss */
@import '../../common/typeList/typeList.wxss';
.activity{
  width:100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.activity-content view{
  width: 100%;
  height: 72rpx;
  display: flex;
  align-items: center;
  line-height: 72rpx;
  font-size:30rpx;
  border-bottom:1px solid #f0f0f0;
  color:#868686;
}
.activity-content view:nth-child(2){
  position: relative;
}
.activity-content .choose-user{
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  position: absolute;
  right: 0;
  top:50%;
  margin-top: -25rpx;
}
.activity-content view input{
  height: 100%;
}
.activity-content view image{
  width: 36rpx;
  height: 36rpx;
  padding-right: 20rpx;
}
.btn{
  width: 600rpx;
  height: 90rpx;
  margin: 0 auto;
  line-height: 90rpx;
  text-align: center;
  background-color:#c6f5fd;
  border-radius: 40rpx;
  font-weight: bold;
  margin-top:115rpx;
  color:#323232;
}