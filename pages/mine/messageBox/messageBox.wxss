/* pages/mine/messageBox/messageBox.wxss */

.message {
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.message-item>view {
  padding: 30rpx 30rpx 30rpx 50rpx;
}

.message-item>view:nth-child(1) {
  display: flex;
  position: relative;
  align-items: center;
  padding: 36rpx 0 20rpx 0;
  font-size: 34rpx;
  font-weight: bold;
}
.time{
  position: absolute;
  right: 0;
  color:#868686;
  font-weight: normal;
}
.message-item image {
  width: 68rpx;
  height: 68rpx;
  margin-right: 25rpx;
}

.message-content {
  min-height: 120rpx;
  background-color: #f5f5f5;
  color: #868686;
  font-size: 32rpx;
}