/* pages/common/postingsList/postingsList.wxss */
.focus-group{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  /* display: none; */
}
.list-content{
  width:546rpx;
  height: 636rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: fixed;
  top:120rpx;
  left:50%;
  margin-left: -273rpx;
  background-color: #fff;
  border-radius:16rpx;
  z-index: 9999;
}
.list-content .title{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color:#323232;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #efefef;
}
checkbox-group label{
  display: block;
}
checkbox-group label,.plus-group{
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #efefef;
  font-size: 30rpx;
  color:#646464;
}
.list-item{
  height: 420rpx;
  overflow-y: scroll;
}
.checkbox checkbox{
  height: 20rpx;
  position: absolute;
  right: 0;
}
.sure{
  display: flex;
  padding-top: 30rpx;
}
.sure text{
  width:50%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size:30rpx;
  color: #646464;
}
.sure text:nth-child(1){
  box-sizing: border-box;
  border-right: 1px solid #efefef;
}
.sure text:nth-child(2){
  color:#fac264;
}
.warrap{
  width:100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.avatar{
  width:100%;
  height:130rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.avatar image{
  width:86rpx;
  height: 86rpx;
  margin-right:30rpx;
  border-radius: 50%;
}
.orgname{
  font-size:34rpx;
  font-weight: bold;
}
.type{
  font-size:30rpx;
  color:#a2a2a2;
}
.type text:nth-child(2){
  padding-left: 20rpx;
}
.focus{
  width:140rpx;
  height: 50rpx;
  position: absolute;
  right:22rpx;
  top:50%;
  margin-top:-22.5rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  border: 1px solid #ffb849;
  font-size:28rpx;
  text-align: center;
  border-radius: 10px;
  color:#ffb849;
}
.text{
  font-size:30rpx;
  line-height: 44rpx;
  color:#323232;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.pictures{
  margin:30rpx 0 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.pictures view{
  width:33.33%;
  height: 240rpx;
  text-align: center;
}
.pictures image{
  width:230rpx;
  height: 230rpx;
}
.user-do{
  display: flex;
  width:100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-bottom:1px solid #e8e8e8;
  align-items: center;
  color:#8d8d8d;
}
.postings-share{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  outline: none !important;
  font-size: 30rpx !important; 
  background-color: transparent;
  color:#8d8d8d;
  padding: 0;
  margin: 0;
}
button::after {
  border: none;
}
.user-do>view{
  width:33.33%;
  height: 100%;
  text-align: center;
  font-size:30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-do>view view{
  width:100%;
  height: 60%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #e8e8e8;
}
.user-do>view:nth-child(3) view{
  border:none;
}
.user-do image{
  width:50rpx;
  height: 50rpx;
  margin-right:10rpx;
}