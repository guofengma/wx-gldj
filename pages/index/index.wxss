/**index.wxss**/
/* 热门关注切换 */
.index{
  height: 100%;
  position: relative;
}
.index-overflow{
  overflow: hidden;
}
.tab{
  width:100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  position: fixed;
  top:0;
  left: 0;
  z-index: 9999;
  border-bottom:2px solid #ebebeb;
}
.nav{
  width: 340rpx;
  height:100%;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.nav view{
  height: 70rpx;
  width: 50%;
  line-height: 70rpx;
  display: flex;
  align-items: center;
  /* justify-content: center; */
}
.onfocus{
  width:100%;
  padding: 0 40rpx 40rpx 40rpx;
  box-sizing: border-box;
  position: absolute;
  background-color: #fff;
  top: 0;
  left: 0;
  z-index: 1000;
  border-top:1px solid #e8e8e8;
}
.focus-do{
  width: 100%;
  height: 85rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  font-size:32rpx;
}
.focus-do text{
  height: 100%;
} 
.group,.hot-type{
  width:102%;
  margin-left:-1%;
  display: flex;
  text-align: center;
  flex-wrap: wrap;
  color: #3a3a3a;
}
.hot-type{
  padding-top: 30rpx;
}
.group>view,.hot-type>view,.all-type{
  width:25%;
  display: flex;
  justify-content: center;
  padding-bottom:20rpx;
}
.group>view view,.hot-type>view view{
  width:155rpx;
  height: 70rpx;
  position: relative;
  line-height: 70rpx;
  background-color: #e6e6e6;
  font-size:30rpx;
}
.group .cancel{
  position:absolute;
  right:-10rpx;
  top:-10rpx;
}
.show-fixed{
  width:100%;
  height: 100%;
  position: fixed;
  left:0;
  top: 90rpx;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 55555;
}
.item{
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
  box-sizing: border-box;
  margin-right:20rpx;
  font-size:34rpx;
}
.active{
  border-bottom:2px solid #000;
}
.triangle-down{ 
  width: 0; 
  height: 0; 
  border-left: 10rpx solid transparent; 
  border-right: 10rpx solid transparent; 
  border-top: 14rpx solid #000; 
} 
.search,.news,.close{
  width:50rpx;
  height: 50rpx;
  position: absolute;
  top:50%;
  margin-top:-25rpx;
}
.search{
  right: 86rpx;
}
.news{
  right: 30rpx;
}
/* 通知 */
.message{
  padding:0 60rpx 0 20rpx;
  height: 85rpx;
  line-height: 85rpx;
  background-color: #f2f2f2;
  font-size:30rpx;
  position: relative;
}
.message view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.close{
  right: 25rpx;
}
/* 帖子内容 */
.focus-group{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 9999;
  /* display: none; */
}
.list-content{
  width:546rpx;
  height: 636rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  position: absolute;
  top:120rpx;
  left:50%;
  margin-left: -273rpx;
  background-color: #fff;
  border-radius:16rpx;
  z-index: 9999;
}
.list-content .title{
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color:#323232;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #efefef;
}
.plus-group{
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #efefef;
  font-size: 30rpx;
  color:#646464;
}
.list-item{
  height: 420rpx;
  overflow-y: scroll;
}
.checkbox checkbox{
  height: 20rpx;
  position: absolute;
  right: 0;
}
.sure{
  display: flex;
  padding-top: 30rpx;
}
.sure text{
  width:50%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size:30rpx;
  color: #646464;
}
.sure text:nth-child(1){
  box-sizing: border-box;
  border-right: 1px solid #efefef;
}
.sure text:nth-child(2){
  color:#fac264;
}
.warrap{
  width:100%;
  padding:0 20rpx;
  box-sizing: border-box;
}
.avatar{
  width:100%;
  height:130rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.avatar image{
  width:86rpx;
  height: 86rpx;
  margin-right:30rpx;
}
.orgname{
  font-size:34rpx;
  font-weight: bold;
}
.type{
  font-size:30rpx;
  color:#a2a2a2;
}
.type text:nth-child(2){
  padding-left: 20rpx;
}
.focus{
  width:125rpx;
  height: 45rpx;
  line-height: 45rpx;
  position: absolute;
  right:22rpx;
  top:50%;
  margin-top:-22.5rpx;
  border: 1px solid #ffb849;
  font-size:30rpx;
  text-align: center;
  border-radius: 10px;
  color:#ffb849;
}
.text{
  font-size:30rpx;
  line-height: 44rpx;
  color:#323232;
  text-align:justify;
}
.pictures{
  margin:30rpx 0 20rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.pictures view{
  width:33.33%;
  height: 240rpx;
  text-align: center;
}
.pictures image{
  width:230rpx;
  height: 230rpx;
}
.user-do{
  display: flex;
  width:100%;
  height: 94rpx;
  background-color: #f9f9f9;
  border-top:1px solid #e8e8e8;
  border-bottom:1px solid #e8e8e8;
  align-items: center;
  color:#8d8d8d;
}
.user-do view{
  width:33.33%;
  height: 45rpx;
  text-align: center;
  font-size:30rpx;
  border-right: 1px solid #e8e8e8;
  display: flex;
  align-items: center;
  justify-content: center;
}
.user-do view:nth-child(3){
  border:none;
}
.user-do image{
  width:50rpx;
  height: 50rpx;
  margin-right:10rpx;
}
/* 尾部 */
.line{
  width: 100%;
  height: 106rpx;
  background-color: #fff;
}
.show-plus{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left: 0;
  z-index: 99999;
  /* display: none; */
  background: url('http://www.wsspha.cn/images/pluss_bg.png') no-repeat center center;
  background-size:100%;
  color:#2e2e2e;
}
.org{
  position: absolute;
  bottom:120rpx;
  left: 0;
  display: flex;
  padding: 0 30rpx;
  flex-wrap: wrap;
}
.org view{
  width:33.33%;
  text-align: center;
  margin-bottom:30rpx;
}
.org view view{
  width: 100%;
  text-align: center;
}
.show-plus image{
  width:120rpx;
  height: 120rpx;
}
.close-plus{
  width:60rpx !important;
  height: 60rpx !important;
  position: absolute;
  bottom:30rpx;
  left:50%;
  margin-left:-22rpx;
}
.footer{
  width:100%;
  height: 94rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9999;
  background-color: #fff;
  display: flex;
  border-top:1px solid #f2f2f2;
}
.footer view,.footer navigator{
  width:33.33%;
  text-align: center;
  font-size:0;
}
.footer view view,.footer navigator view{
  width: 100%;
  text-align: center;
  font-size:30rpx;
}
.footer navigator image{
  width:50rpx;
  height: 50rpx;
  margin-top:6rpx;
}
.plus{
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer view:nth-child(2) image{
  width:71rpx;
  height: 71rpx;
}
/* 新建分组 */
.add-fixed{
  width:100%;
  height: 100%;
  position: fixed;
  z-index: 66666;
  background-color: rgba(0, 0, 0, 0.5);
}
.add-group{
  width: 546rpx;
  height: 300rpx;
  position: fixed;
  top:120rpx;
  left:50%;
  margin-left: -273rpx;
  background-color: #fff;
  border-radius:16rpx;
  z-index: 99999;
}
.add-group input{
  width:460rpx;
  height: 60rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
  margin: 0 auto;
  border: 1px solid #f0f0f0;
  font-size:32rpx;
  border-radius: 6px;
}
.add-group-title{
  padding: 35rpx 0;
  text-align: center;
}
.add-group-btn{
  display: flex;
  margin-top:50rpx;
  font-size: 32rpx;
}
.add-group-btn view{
  width:50%;
  text-align: center;
}
.add-group-btn view:nth-child(1){
  border-right: 1px solid #f0f0f0;
}
.btn-sure{
  color:#fac264;
}