<!--pages/index/detail/detail.wxml-->
<view class='detail'>
  <view class='content'>
    <view hidden='{{true}}' bind:touchstart="hideGroup" class='focus-group'>
    </view>
    <view hidden='{{true}}' class='list-content'>
      <view class='title'>请选择分组</view>
      <view class='list-item'>
        <checkbox-group wx:for="{{8}}" wx:key="key">
          <label class="checkbox">
            <checkbox value="分组一" checked="{{index}}" />分组一
          </label>
        </checkbox-group>
        <view class='plus-group'>+新建分组</view>
      </view>
      <view class='sure'>
        <text>暂不分组</text>
        <text>确定</text>
      </view>
    </view>
    <view class='item-content'>
      <view class='avatar warrap'>
        <image src='{{detail.imgUrl+detail.avatar}}'></image>
        <view>
          <view class='orgname'>{{detail.orgName}}</view>
          <view class='type'>
            <text>{{detail.title}}</text>
            <text>{{detail.actDate}}</text>
          </view>
        </view>
        <view bindtap='showGroup' class='focus'>+关注</view>
      </view>
      <view class='text warrap'>{{detail.pubContent}}</view>
      <view class='pictures warrap'>
        <view wx:for="{{detail.pics}}" wx:key="index">
          <image src='/images/avatar.jpg' wx:key="index"></image>
        </view>
      </view>
    </view>
  </view>
  <view class='user-content'>
    <view class='sign'>
      <view>{{detail.checksDetail?detail.checksDetail.length:0}}人签到</view>
      <scroll-view scroll-x="true">
        <view class='scroll-item' wx:for="{{detail.checksDetail}}" wx:for-item="i" wx:key="index">
          <image src='{{i.avatar}}'></image>
          <view>{{i.name}}</view>
        </view>
      </scroll-view>
    </view>
    <view class='share-comment'>
      <view class='share-comment-title'>
        <view catchtap='changeTab' data-index="0">
          <text class="{{active==0?'active':''}}">分享6</text>
        </view>
        <view catchtap='changeTab' data-index="1">
          <text class="{{active==1?'active':''}}">评论2</text>
        </view>
        <view catchtap='changeTab' data-index="2">
          <text class="{{active==2?'active':''}}">赞10</text>
        </view>
      </view>
      <view hidden='{{active!=0}}'>
        <view wx:for="{{6}}" wx:key="index" class='share-content'>
          <image class='avatar-img' src='/images/avatar.jpg'></image>
          <view>
            <view class='share-name'>苏朋辉</view>
            <view class='share-name'>分享帖子</view>
            <view class='share-time'><text>11-25 11:23</text></view>
          </view>
        </view>
      </view>
      <view hidden='{{active!=1}}'>
        <view wx:for="{{6}}" wx:key="index" class='comment-content'>
          <image class='avatar-img' src='/images/avatar.jpg'></image>
          <view>
            <view class='user-name'>苏朋辉</view>
            <view class='user-comment'>犯贱犯贱犯贱经济纠纷艰苦奋斗防范地方的地方豆腐干好好好搞好规划和改革和韩国国会</view>
            <view class='comment-time'><text>11-25 11:23</text></view>
          </view>
        </view>
      </view>
      <view hidden='{{active!=2}}'>
        <view wx:for="{{6}}" wx:key="index" class='like-content'>
          <image class='avatar-img' src='/images/avatar.jpg'></image>
          <view class='like-name'>苏朋辉</view>
        </view>
      </view>
    </view>
  </view>
  <view style='width:100%;height:100rpx'></view>
  <view hidden='{{showComment}}' bind:touchstart='goComment' class='show-fixed'></view>
  <view hidden='{{showComment}}' class='comment'>
    <textarea fixed="true" bindconfirm="sureComment" placeholder='请输入评论内容'></textarea>
  </view>
  <view class='user-do'>
    <view>
      <image src='/images/share.png'></image>
      <text>分享</text>
    </view>
    <view catchtap='goComment'>
      <image src='/images/comment.png'></image>
      <text>评论</text>
    </view>
    <view>
      <image src="/images/fabulous.png"></image>
      <text>赞</text>
    </view>
  </view>
</view>
